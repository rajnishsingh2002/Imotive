<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161616"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/profileHeader"
        android:layout_width="match_parent"

        android:layout_height="70dp">

        <ImageView
            android:id="@+id/profileImg"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:background="@drawable/back_arrow_icon"
            android:backgroundTint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/profileImg"
            android:text="Profile"
            android:textColor="@color/white"
            android:textSize="16sp" />


        <LinearLayout
            android:id="@+id/totalCoins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/coins_bg"
            android:gravity="center"
            android:orientation="horizontal"
           android:padding="9dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:backgroundTint="#B5B5B5"
                android:src="@drawable/support_icon" />

            <TextView
                android:id="@+id/foodRatingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="7dp"
                android:text="Support"
                android:textColor="#B5B5B5"
                android:textSize="16sp" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileHeader"
        android:layout_marginTop="5dp"
        android:id="@+id/profileDetails"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <RelativeLayout
            android:id="@+id/userNameImgSec"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginStart="15dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/profileImgCard"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:id="@+id/foodImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_launcher_background" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/profileImgCard"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rajnish Singh"
                    android:textColor="#B9B9B9"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="member since Dec, 2022"
                    android:textColor="#969998"
                    android:textSize="14sp" />


            </LinearLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"

                android:layout_weight="1">

                <View
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/portfolio_circle_bg" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edit_icon" />
            </FrameLayout>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/credGarage"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/userNameImgSec"
            android:layout_margin="15dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="12dp">

                        <View
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:background="@drawable/portfolio_circle_bg" />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:background="@drawable/car_icon" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="get to know your vehicles, inside out"
                            android:textColor="#B5B5B5"
                            android:textSize="13sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CRED garage"
                                android:textColor="#ffffff" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="26dp"
                                android:layout_marginStart="7dp"

                                android:background="@drawable/forword_arrow"
                                android:backgroundTint="@color/white" />
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/credGarage"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/creditIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/portfolio_circle_bg"
                    android:gravity="center"
                    android:text="A" />

                <TextView
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_toEndOf="@+id/creditIcon"
                    android:text="credit score"
                    android:textColor="#B4B4B4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_toEndOf="@+id/score"
                    android:text="â€¢ REFRESH AVAILABLE"
                    android:textColor="#33A16F"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/creditForwordIcon"
                    android:layout_width="20dp"
                    android:layout_height="26dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="7dp"
                    android:background="@drawable/forword_arrow"
                    android:backgroundTint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_toStartOf="@+id/creditForwordIcon"
                    android:text="757"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/creditIcon"
                    android:layout_marginTop="15dp"
                    android:background="#836C6C6C" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/rupeesIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/portfolio_circle_bg"
                    android:gravity="center"
                    android:padding="2dp"
                    android:src="@drawable/rupee_icon"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cashBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_toEndOf="@+id/rupeesIcon"
                    android:text="lifetime cashback"
                    android:textColor="#B4B4B4" />


                <ImageView
                    android:id="@+id/cashbackForwordIcon"
                    android:layout_width="20dp"
                    android:layout_height="26dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="7dp"
                    android:background="@drawable/forword_arrow"
                    android:backgroundTint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_toStartOf="@+id/cashbackForwordIcon"
                    android:text="3"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/rupeesIcon"
                    android:layout_marginTop="15dp"
                    android:background="#836C6C6C" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/bankIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/portfolio_circle_bg"
                    android:gravity="center"
                    android:padding="2dp"
                    android:src="@drawable/double_arrow_icon" />

                <TextView
                    android:id="@+id/balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_toEndOf="@+id/bankIcon"
                    android:text="bank balance"
                    android:textColor="#B4B4B4" />


                <ImageView
                    android:id="@+id/balanceForwordIcon"
                    android:layout_width="20dp"
                    android:layout_height="26dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="7dp"
                    android:background="@drawable/forword_arrow"
                    android:backgroundTint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_toStartOf="@+id/balanceForwordIcon"
                    android:text="check"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />



            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/RewardsBenfit"
        android:layout_below="@+id/profileDetails"
        android:background="#0D0D0D"
        android:paddingStart="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="YOUR REWARDS &amp; BENEFITS"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp">

            <TextView
                android:id="@+id/bankCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cashback balance"
                android:textColor="@color/white"
                 />

            <TextView
                android:id="@+id/bankCardDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bankCard"
                android:text="rs 0"
                android:textColor="#909294"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:backgroundTint="#B4B4B4"
                android:background="@drawable/arrow_forward_icon" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/bankCardDesc"
                android:layout_marginTop="15dp"
                android:background="#836C6C6C" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp">

            <TextView
                android:id="@+id/coins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="coins"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/totalCoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coins"
                android:text="26,44,583"
                android:textColor="#909294"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:backgroundTint="#B4B4B4"
                android:background="@drawable/arrow_forward_icon" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/totalCoin"
                android:layout_marginTop="15dp"
                android:background="#836C6C6C" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp">

            <TextView
                android:id="@+id/winRupees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="win upto Rs 1000"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/refer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/winRupees"
                android:text="refer and earn"
                android:textColor="#909294"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:backgroundTint="#B4B4B4"
                android:background="@drawable/arrow_forward_icon" />



        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/RewardsBenfit"
        android:background="#0D0D0D"
        android:paddingStart="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="TRANSACTIONS &amp; SUPPORT"/>




    </LinearLayout>



</RelativeLayout>